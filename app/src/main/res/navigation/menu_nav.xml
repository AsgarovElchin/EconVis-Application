<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_nav"
    app:startDestination="@id/worldMapFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="asgarov.elchin.econvis.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_localDataViewFragment"
            app:destination="@id/localDataViewFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_signUpOrLoginFragment"
            app:destination="@id/signUpOrLoginFragment" />
        />
    </fragment>
    <fragment
        android:id="@+id/comparisonFragment"
        android:name="asgarov.ui.comparison.ComparisonFragment"
        android:label="Inequality Comparison"
        tools:layout="@layout/fragment_comparison" />
    <fragment
        android:id="@+id/savedChartsFragment"
        android:name="asgarov.elchin.econvis.SavedChartsFragment"
        android:label="Saved Charts"
        tools:layout="@layout/fragment_saved_charts" />
    <fragment
        android:id="@+id/worldMapFragment"
        android:name="asgarov.ui.world_map.WorldMapFragment"
        android:label="World Map"
        tools:layout="@layout/fragment_world_map" />
    <fragment
        android:id="@+id/localDataViewFragment"
        android:name="asgarov.elchin.econvis.LocalDataViewFragment"
        android:label="fragment_local_data_view"
        tools:layout="@layout/fragment_local_data_view" />
    <fragment
        android:id="@+id/signUpOrLoginFragment"
        android:name="asgarov.elchin.econvis.SignUpOrLoginFragment"
        android:label="fragment_sign_up_or_login"
        tools:layout="@layout/fragment_sign_up_or_login" />
</navigation>