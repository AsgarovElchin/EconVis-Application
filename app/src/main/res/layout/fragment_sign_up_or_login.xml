    <ImageView
        android:id="@+id/image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rounded_rectangle"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:text="Login or Sign Up"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/image_view"
        app:layout_constraintStart_toStartOf="@id/image_view"
        app:layout_constraintEnd_toEndOf="@id/image_view"
        android:id="@+id/login_or_sign_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_button"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/login_or_sign_up_text"
        android:text="Login"
        android:layout_width="260dp"
        app:layout_constraintStart_toStartOf="@id/image_view"
        app:layout_constraintEnd_toEndOf="@id/image_view"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_an_account_button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        android:text="Create an account"
        android:layout_width="260dp"
        app:layout_constraintStart_toStartOf="@id/image_view"
        app:layout_constraintEnd_toEndOf="@id/image_view"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Later"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/create_an_account_button"
        app:layout_constraintStart_toStartOf="@id/image_view"
        app:layout_constraintEnd_toEndOf="@id/image_view"
        android:id="@+id/later_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>











